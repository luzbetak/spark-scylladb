#!/bin/bash
#------------------------------------------------------------------------------#
case "$1" in
#------------------------------------------------------------------------------#
visit)
    spark-shell -i count-visit.scala visit 
;;
#------------------------------------------------------------------------------#
links)
    spark-shell -i count-links1.scala 
;;
#------------------------------------------------------------------------------#
*)
    echo "+---------------------------------------------------------+"
    echo "|                    -= MENU =-                           |"
    echo "+---------------------------------------------------------+"
    echo "|  ./run               -- Menu Help                       |"
    echo "|  ./run visit         -- Count Total Visit               |"
    echo "|  ./run links         -- Count Total Links               |"
    echo "+---------------------------------------------------------+"

;;
#------------------------------------------------------------------------------#
esac
exit 0
